<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find a car! |
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>


<body>
    <div class="container-sm">
        <%- include("D:/Desktop/website/views/partials/header.ejs") %>
            <div class="row align-items-center mt-4 mb-2">
                <div class="col">
                    <div class="input-group flex-nowrap">
                        <span class="input-group-text" id="addon-wrapping">Brand</span>
                        <input type="text" class="form-control" placeholder="" aria-label="Brand" aria-describedby="addon-wrapping" id="brandId">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group flex-nowrap">
                        <span class="input-group-text" id="addon-wrapping">Model</span>
                        <input type="text" class="form-control" placeholder="" aria-label="Model" aria-describedby="addon-wrapping" id="modelId">
                    </div>
                </div>
                <div class="col">
                    <div class="input-group flex-nowrap">
                        <span class="input-group-text" id="addon-wrapping">Year</span>
                        <input type="text" class="form-control" placeholder="" aria-label="Model" aria-describedby="addon-wrapping" id="yearId">
                    </div>
                </div>
            </div>
            <div class="text-center p-3">
                <button type="button" class="btn btn-success" id="search">Search</button>
            </div>

            <p id="demo"></p>

    </div>

    </div>
    <script>
        const text1 = document.getElementById("brandId");
        const text2 = document.getElementById("modelId");
        const text3 = document.getElementById("yearId");

        document.getElementById("search").addEventListener("click", function() {
            document.getElementById("demo").innerHTML = text1.value + " " + text2.value + " " + text3.value;
        })
    </script>
</body>

</html>